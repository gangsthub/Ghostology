<div class="wrapper">

    {{! This is the post loop - each post will be output using this markup }}
    {{#foreach posts}}
    <div class="row">
        <div class="columns large-9 simplecentered">
            <header><h2 class="title"><a class="link" href="{{url}}">{{{title}}}</a></h2></header>

            <section class="post-excerpt">
                <p>{{excerpt words="100"}} <a class="read-more link" href="{{url}}">&raquo;</a></p>
            </section>

            {{! Everything inside the #author tags pulls data from the author }}
            {{#author}}

            <footer class="post-footer box">
                {{#if @blog.logo}}
                    <img class="author-thumb" src="{{@blog.logo}}" alt="Graficos.net" nopin="nopin" />
                {{/if}}

                <div class="author-info">

                    by <a class="link" href="{{url}}">{{name}}</a>

                    <br>

                    <time datetime="{{date format='YYYY-MM-DD'}}">on {{date format="MMMM DD, YYYY"}}</time>

                </div>

            </footer>

            {{/author}}

        </div>
    </div>
    {{/foreach}}

</div>

{{! Previous/next page links - displayed on every page }}
{{pagination}}
